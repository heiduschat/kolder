{
  "private": true,
  "name": "<%= name %>",
  "description": "<%= description %>",
  "version": "0.0.0",
  "repository": {},
  "scripts": {
    <%_ if (type === 'vue') { -%>
    "dev": "webpack-dev-server --inline --hot",
    <%_  } else { -%>
    "dev": "webpack-dev-server",
    <%_ } -%>
    "build": "cross-env NODE_ENV=production webpack -p",
    "lint": "eslint src/javascripts/ webpack.*.js; exit 0",
    <%_ if (unit) { -%>
    "test": "ava --verbose"
    <%_ } else { -%>
    "test": "echo nada"
    <%_ } -%>
  },
  "babel": {
    "presets": [
      ["es2015", {
        "modules": false
      }],
      "stage-0"
      <%_ if (type === 'react') { -%>,
      "react"
      <%_ } %>
      <%_ if (unit) { -%>,
      "@ava/stage-4"
      <%_ } %>
    ]
  },
  <%_ if (unit) { -%>
  "ava": {
    "require": ["babel-register"]
  },
  <%_ } -%>
  "dependencies": {
    <%_ if (type === 'vue') { -%>
    "vue": "^2.2.2"
    <%_ } -%>
    <%_ if (type === 'react') { -%>
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
    <%_ } -%>
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    <%_ if (unit) { -%>
    "ava": "^0.21.0",
    <%_ } -%>
    "babel-core": "^6.25.0",
    <%_ if (type === 'react') { -%>
    "babel-eslint": "^7.2.1",
    <%_ } -%>
    "babel-loader": "^7.1.1",
    <%_ if (type === 'vue') { -%>
    "babel-plugin-transform-runtime": "^6.23.0",
    <%_ } -%>
    "babel-preset-es2015": "^6.24.1",
    <%_ if (type === 'react') { -%>
    "babel-preset-react": "^6.23.0",
    <%_ } -%>
    "babel-preset-stage-0": "^6.24.1",
    <%_ if (unit) { -%>
    "babel-register": "^6.24.1",
    <%_ } -%>
    <%_ if (type === 'vue') { -%>
    "babel-runtime": "^6.23.0",
    <%_ } -%>
    "chalk": "^2.0.1",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-codeframe-formatter": "^1.0.2",
    "eslint-config-airbnb": "^15.0.2",
    <%_ if (type === 'vue') { -%>
    "eslint-config-vue": "^2.0.2",
    <%_ } -%>
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.0.0",
    "eslint-plugin-react": "^7.1.0",
    <%_ if (type === 'vue') { -%>
    "eslint-plugin-vue": "^2.0.1",
    <%_ } -%>
    "extract-text-webpack-plugin": "^3.0.0",
    "node-sass": "^4.5.3",
    "post-compile-webpack-plugin": "^0.1.1",
    "postcss-cli": "^4.1.0",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "stats-webpack-plugin": "^0.6.1",
    <%_ if (type === 'vue') { -%>
    "vue-loader": "^11.1.4",
    "vue-template-compiler": "^2.2.2",
    <%_ } -%>
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "license": "MIT"
}
